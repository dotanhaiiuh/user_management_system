<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <title>Create User</title>
</head>

<body>
    <div class="container-fuild">
        <h3 class="ml-3">Create User</h3>
        <form action="/users/create" method="post" class="col-5">
            <div class="form-group">
                <label for="txtUserName">User Name:</label>
                <input type="text" id="txtUserName" name="username" class="form-control" value="<%= values.username %>">
                <% errors.forEach(function(error) { %>
                    <% if(error == 1){ %>
                        <div class="alert alert-danger">User name is required</div>
                    <% } %>
                <% }); %>
            </div>
            <div class="form-group">
                <label for="txtAge">Age:</label>
                <input type="text" id="txtAge" name="age" class="form-control" value="<%= values.age %>">
                <% errors.forEach(function(error) { %>
                    <% if(error == 2){ %>
                        <div class="alert alert-danger">Age is required</div>
                    <% } %>
                <% }); %>
            </div>
            <button type="submit" id="btnCreate" class="btn btn-primary">Create</button>
        </form>
    </div>
</body>

</html>